<body>
    <header>
        <h1>Blog Editor</h1>
    </header>

    <div class="blog-editor">
        <label for="blogContent">Edit Blog Content:</label>
        <textarea id="blogContent" placeholder="Write your blog entry here"></textarea>

        <button onclick="saveBlog()">Save</button>

        <div class="go-back">
            <button onclick="goBack()">Go Back</button>
        </div>
    </div>

    <script>
        function goBack() {
            window.history.back();
        }

        function saveBlog() {
            var blogContent = document.getElementById("blogContent").value;

            // Simulate storing the content in local storage
            localStorage.setItem("editedBlogContent", blogContent);
            alert("Blog content saved successfully!");
        }

        // Load the existing content if available
        document.getElementById("blogContent").value = localStorage.getItem("editedBlogContent") || "";
    </script>
</body>
